#!/bin/sh -e

DEBCONFDB=/usr/share/ulteo/ovd/debconfdb

case "$1" in

    configure)
        passwd=$(< /dev/urandom tr -dc _A-Za-z0-9 | head -c12)
        sed -r "s/^mysql-server-5.0(.*)/mysql-server-5.0\1$passwd/" $DEBCONFDB | debconf-set-selections

    ;;

    abort-*)
        exit 1
    ;;

    *) ;;
esac

#DEBHELPER#

exit 0

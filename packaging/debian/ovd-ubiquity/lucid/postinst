#! /bin/sh -e

. /usr/share/debconf/confmodule

sed -i "/^AFTER/c AFTER = 'ovd'" /usr/lib/ubiquity/plugins/ubi-summary.py
sed -i "123,129 c\        shutil.copyfile('/usr/lib/ubiquity/ovd-setup/mysql-initctl', initctl)" \
    /usr/lib/ubiquity/ubiquity/install_misc.py

gconftool-2 --direct --type string \
  --config-source xml:readwrite:/etc/gconf/gconf.xml.mandatory \
  --set /desktop/gnome/background/picture_filename /usr/share/wallpapers/ulteo-ubiquity.png \
  --set /desktop/gnome/background/picture_options stretched \
  --set /apps/metacity/general/theme OVD

xsltproc -o /usr/share/ubiquity/gtk/stepUserInfo.ui /usr/lib/ubiquity/ovd-setup/stepUserInfo.xslt \
            /usr/share/ubiquity/gtk/stepUserInfo.ui

#DEBHELPER#

exit 0

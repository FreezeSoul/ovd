#! /bin/sh -e

. /usr/share/debconf/confmodule

SLAVECONF=/etc/ulteo/ovd/slaveserver.conf

if [ "$1" = "configure" ] && [ -z "$2" ] || [ "$1" = "reconfigure" ]; then

    db_get ulteo-ovd-slaveserver/session_manager && SM=$RET
    sed -i "s/^session_manager.*/session_manager = $SM/" $SLAVECONF

fi

#DEBHELPER#

exit 0

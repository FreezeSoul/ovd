CC=gcc
JAVAHOME?=/usr/lib/jvm/java-1.6.0-openjdk
CFLAGS=-Wall -I${JAVAHOME}/include -I${JAVAHOME}/include/linux -fPIC
LDFLAGS=-lX11
EXEC=libXClientArea.so
DESTDIR?=.
LIBDIR=$(DESTDIR)/usr/lib/

all: $(EXEC)

$(EXEC): src/org_ulteo_ovd_client_env_WorkArea.o
	$(CC) $(LDFLAGS) -shared -o $@ $^

src/org_ulteo_ovd_client_env_WorkArea.h:
	javac -classpath ../src -d . ../src/org/ulteo/ovd/client/env/WorkArea.java
	javah -d ./src/ org.ulteo.ovd.client.env.WorkArea

src/%.o: src/%.c src/%.h
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	$(RM) src/*.o $(EXEC)
	$(RM) *~
	$(RM) src/org_ulteo_ovd_client_env_WorkArea.h
	$(RM) -rf org

install: all
	mkdir -p $(LIBDIR)
	install $(EXEC) $(LIBDIR)

uninstall:
	$(RM) $(LIBDIR)/$(EXEC)

dist: clean
	tar -cvf ovd-xclient-area-@VERSION@.tar.gz src/org_ulteo_ovd_client_env_WorkArea.c Makefile

distcheck: dist

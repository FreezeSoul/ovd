#!/bin/sh

if [ -n "$OVD_VERSION" ]; then
    version="$OVD_VERSION"
else
    if [ -d .svn ]; then
      revision=$(LC_ALL=C svn info . | awk '/^Revision: / {printf "%05d\n", $2}')
    else
      revision=0
    fi
    version=99.99+svn$revision
fi

sed "s/@VERSION@/${version}/g" Makefile.in > Makefile

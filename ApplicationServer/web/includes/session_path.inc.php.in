require_once(dirname(__FILE__).'/core.inc.php');

$config_file = '@SYSCONFDIR@/ulteo-ovd.conf';

$keys_conf_outside_chroot = array(
	'CHROOT' => 'CHROOT', 
	'LOG_WWW' => 'APS_LOGS');  // key_bash => key_php
$keys_conf_inside_chroot = array(
	'SERVERNAME' => 'SERVERNAME', 
	'SESSION_MANAGER_URL' => 'SESSIONMANAGER_URL', 
	'LOG_FILE' => 'LOG_FILE', 
	'LOG_FLAGS' => 'LOG_FLAGS', 
	'CONNECTION_TIMEOUT' => 'TIMEOUT', // CONNECTION_TIMEOUT is a reserved PHP variable
	'SPOOL' => 'SPOOL');  // key_bash => key_php

// read the conf file outside the chroot

if (! is_readable($config_file))
	die('Error reading config file 1a: '.$config_file);

$contents = file_get_contents($config_file);
$lines = explode("\n", $contents);

foreach ($lines as $line) {
	$values = explode("=", $line);
	if (count($values) == 2) {
		if (array_key_exists($values[0], $keys_conf_outside_chroot)) {
			if (! defined($keys_conf_outside_chroot[$values[0]])) {
				define($keys_conf_outside_chroot[$values[0]], $values[1]);
			}
		}
	}
}

foreach ($keys_conf_outside_chroot as $k => $v) {
	if (! defined($v)) {
		die("Error parsing config file 1d: $config_file key $v not found");
	}
}

// read the conf file inside the chroot

$config_file_chroot = CHROOT.'/etc/ulteo-ovd.conf';

if (! is_readable($config_file_chroot))
	die('Error reading config file 2 : '.$config_file_chroot);

define('PDF_POOL_DIR', CHROOT.'/var/spool/cups2all/');

$contents = file_get_contents($config_file_chroot);
$lines = explode("\n", $contents);
 
foreach ($lines as $line) {
	$values = explode("=", $line);
	if (count($values) == 2) {
		if (array_key_exists($values[0], $keys_conf_inside_chroot)) {
			if (! defined($keys_conf_inside_chroot[$values[0]])) {
				define($keys_conf_inside_chroot[$values[0]], $values[1]);
			}
		}
	}
}

foreach ($keys_conf_inside_chroot as $k => $v) {
	if (! defined($v)) {
		die("Error parsing config file 1e: $config_file_chroot key $v not found");
	}
}

define('CHROOT_SPOOL', CHROOT.'/'.SPOOL);
define('SESSION_PATH', CHROOT_SPOOL.'/sessions');
define('SESSION2CREATE_PATH', CHROOT_SPOOL.'/sessions2create');
define('SPOOL_APT',  CHROOT_SPOOL.'/apt');
define('SPOOL_FILE', CHROOT_SPOOL.'/files');
define('LOCALE_DIR', '@LOCALE_DIR@');

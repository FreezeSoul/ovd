import os

from ovd_shells.Platform import _platform as Platform


def main():
	user_sdir = Platform.getUserSessionDir()
	#if user_sdir is None:
		#sys.exit(1)
	
	#if not os.path.isdir(user_sdir):
		#sys.exit(1)
	
	os.environ["OVD_SESSION_DIR"] = user_sdir
	
	Platform.startDesktop()
	
	sys.exit(0)


if __name__ == "__main__":
	if False:
		import sys
		
		path = os.path.join(os.path.expanduser('~'), "dump.txt")
		buf = file(path, "a")
		sys.stderr.close()
		sys.stderr = buf
		sys.stdout.close()
		sys.stdout = buf

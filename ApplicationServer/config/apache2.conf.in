NameVirtualHost *
<VirtualHost *>
        ServerAdmin webmaster@localhost

        DocumentRoot @DATADIR@/ulteo/applicationserver/
        <Directory />
                Options FollowSymLinks
                AllowOverride None
        </Directory>
        <Directory @DATADIR@/ulteo/applicationserver/>
                php_admin_flag magic_quotes_gpc Off
                Options FollowSymLinks MultiViews
                AllowOverride None
                Order allow,deny
                allow from all
        </Directory>

        ErrorLog @LOCALSTATEDIR@/log/ulteo/applicationserver/error.log
        LogLevel warn
        CustomLog @LOCALSTATEDIR@/log/ulteo/applicationserver/access.log combined
</VirtualHost>


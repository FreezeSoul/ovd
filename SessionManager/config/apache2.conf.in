# Ulteo session manager alias

Alias /ovd/client @DATADIR@/ulteo/sessionmanager/client
<Directory @DATADIR@/ulteo/sessionmanager/client>
    Options FollowSymLinks
    AllowOverride None
    Order allow,deny
    allow from all
    DirectoryIndex index.php
    php_admin_flag magic_quotes_gpc Off
</Directory>

Alias /ovd/admin/base.tar.gz /var/cache/ulteo/sessionmanager/base.tar.gz
<Location /ovd/admin/base.tar.gz>
    Order allow,deny
    allow from all
</Location>

Alias /ovd/admin @DATADIR@/ulteo/sessionmanager/admin
<Directory @DATADIR@/ulteo/sessionmanager/admin>
    Options FollowSymLinks
    AllowOverride None
    Order allow,deny
    allow from all
    DirectoryIndex index.php
    php_admin_flag magic_quotes_gpc Off
</Directory>

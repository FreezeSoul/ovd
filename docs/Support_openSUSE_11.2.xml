      <itemizedlist>
        <listitem>
          <xi:include href="&parent;" xpointer="repository_online_step1_para" />
          <screen>
            <![CDATA[
zypper ar http://archive.ulteo.com/ovd/3.0/opensuse/11.2 ovd]]>

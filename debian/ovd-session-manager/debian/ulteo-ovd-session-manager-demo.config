#!/bin/sh -e
# vim: set syntax=sh:

. /usr/share/debconf/confmodule
db_version 2.0

if [ "$1" = "configure" ] && [ -z "$2" ] || [ "$1" = "reconfigure" ]; then
db_get ulteo-ovd-session-manager/oem
if [ "$RET" = true ];then
	  db_set ulteo-ovd-session-manager/mysql_configure true
	    db_input medium ulteo-ovd-session-manager/mysql_configure || true
	  db_go || true

	  db_get ulteo-ovd-session-manager/mysql_configure || true
	  if [ "$RET" = "true" ]; then
	    db_input medium ulteo-ovd-session-manager/mysql_dbserver || true
	    db_input medium ulteo-ovd-session-manager/mysql_dbadmin || true
	    db_input medium ulteo-ovd-session-manager/mysql_dbadmpass || true
	    db_input medium ulteo-ovd-session-manager/mysql_dbuser || true
	    db_input medium ulteo-ovd-session-manager/mysql_dbpass || true
	    db_input medium ulteo-ovd-session-manager/mysql_dbname || true
	    db_go || true
	  fi
fi
fi
db_stop

exit 0
